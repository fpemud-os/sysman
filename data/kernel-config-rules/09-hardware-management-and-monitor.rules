SUSPEND=y
HIBERNATION=y

ACPI_EC_DEBUGFS=n
ACPI_CUSTOM_METHOD=n
ACPI_REDUCED_HARDWARE_ONLY=n       # Hardware-reduced ACPI support only
[symbols:ACPI]=m,y

[symbols:/Power management and ACPI options/CPU Frequency scaling]=y

INTEL_IDLE=y
[symbols:/Power management and ACPI options/CPU Idle]=y

X86_PM_TIMER=y

# menu: /Device Drivers/Hardware Monitoring support
[symbols:HWMON]=m,y

# menu: /Device Drivers/Generic Thermal sysfs driver
[symbols:THERMAL]=m,y

# menu: /Device Drivers/Generic powercap sysfs driver
POWERCAP=y
INTEL_RAPL=m,y          # currently we enable only this one in this menu
